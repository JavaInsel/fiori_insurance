<mvc:View
   controllerName="ui5app.controller.Tiles"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
      headerText="{i18n>home}"
      class="sapUiResponsiveMargin"
      width="auto">
      <content>
        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>createNewInsurance}"
            subheader="{i18n>subtitle}" press=".onPressCreate">
            <TileContent>
                <ImageContent src="sap-icon://create-form" />
            </TileContent>
        </GenericTile> 

        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>showInsurances}"
        subheader="{i18n>subtitle2}" press=".onPressShow">
            <TileContent>
                <ImageContent src="sap-icon://show" />
            </TileContent>
        </GenericTile> 

            
      </content>
   </Panel>
</mvc:View>