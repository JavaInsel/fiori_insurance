    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
   
              <headerContent>
                <ComboBox id="combox" selectedKey="DE" selectionChange="onSelectionChange" width="55%">
                  <items>
                    <core:Item key = "DE" text = "DE | &#x1F1E9;&#x1F1EA; "/>
                    <core:Item key = "EN" text = "EN | &#x1F1EC;&#x1F1E7;" />
                    <core:Item key = "ID" text = "ID | &#x1F1EE;&#x1F1E9;" />
                    <core:Item key = "CN" text = "CN | &#x1F1E8;&#x1F1F3;" />
                    <core:Item key = "RU" text = "RU | &#x1F1F7;&#x1F1FA;" />
                  </items>  
                </ComboBox>
              </headerContent>
              
              <content>
                <mvc:XMLView viewName="ui5app.view.Tiles"/>
            </content>
   
       
    </Page>
</mvc:View>
